# QuickerCleaner Elite Edition - Environment Configuration Template
# Copy this file to .env and adjust the settings as needed

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Target drive for moving files (optional)
# If not set, files will be deleted instead of moved
QUICK_CLEANER_TARGET_DRIVE=D:

# Maximum file size in GB (files larger than this will be skipped)
QUICK_CLEANER_MAX_FILE_SIZE_GB=10.0

# Minimum file age in days (files newer than this will be skipped)
QUICK_CLEANER_MIN_AGE_DAYS=30

# Dry run mode (preview only, no actual deletion/moving)
QUICK_CLEANER_DRY_RUN=false

# =============================================================================
# PROTECTED PATHS
# =============================================================================

# Comma-separated list of protected paths that should never be cleaned
# These paths will be completely excluded from all operations
QUICK_CLEANER_PROTECTED_PATHS=C:\Important,C:\Backup,C:\Documents,C:\Desktop,C:\Pictures,C:\Music,C:\Videos

# Protected file extensions (comma-separated)
# Files with these extensions will be skipped
QUICK_CLEANER_PROTECTED_EXTENSIONS=.exe,.dll,.sys,.doc,.docx,.pdf,.xls,.xlsx,.ppt,.pptx,.zip,.rar,.7z

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
QUICK_CLEANER_LOG_LEVEL=INFO

# Log file path (optional, if not set logs go to console only)
QUICK_CLEANER_LOG_FILE=logs/quicker-cleaner.log

# Enable detailed logging
QUICK_CLEANER_VERBOSE=false

# =============================================================================
# CLEANUP PATTERNS
# =============================================================================

# Temporary file patterns to clean (comma-separated)
QUICK_CLEANER_TEMP_PATTERNS=*.tmp,*.temp,*.log,*.cache,*.bak,*.old

# Browser cache directories to clean (comma-separated)
QUICK_CLEANER_BROWSER_CACHE_DIRS=Chrome,Firefox,Edge,Safari

# System directories to clean (comma-separated)
QUICK_CLEANER_SYSTEM_DIRS=Windows\Temp,Windows\Prefetch,Windows\SoftwareDistribution\Download

# =============================================================================
# GUI CONFIGURATION
# =============================================================================

# GUI theme (light, dark, system)
QUICK_CLEANER_GUI_THEME=system

# GUI window size (widthxheight)
QUICK_CLEANER_GUI_SIZE=800x600

# Enable GUI animations
QUICK_CLEANER_GUI_ANIMATIONS=true

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Thread pool size for parallel operations
QUICK_CLEANER_THREAD_POOL_SIZE=4

# Batch size for file operations
QUICK_CLEANER_BATCH_SIZE=100

# Timeout for file operations in seconds
QUICK_CLEANER_TIMEOUT=30

# Enable network drive detection
QUICK_CLEANER_DETECT_NETWORK_DRIVES=true

# Enable system restore point creation before cleaning
QUICK_CLEANER_CREATE_RESTORE_POINT=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (development only)
QUICK_CLEANER_DEBUG=false

# Enable profiling (development only)
QUICK_CLEANER_PROFILE=false

# Test mode (development only)
QUICK_CLEANER_TEST_MODE=false 